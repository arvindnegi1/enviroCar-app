<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.carselection.Manufacturer_fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_search_black_24dp"
            android:hint="Search car manufacturer"
            android:textAlignment="center"
            android:background="@drawable/girdbox"
            android:id="@+id/autoComplete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Popular Manufacturer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/cario_color_primary_dark"
            android:layout_marginTop="20dp"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:numColumns="3"
            android:id="@+id/fragment_manufacturer_grid"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="All Manufacturer"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@color/cario_color_primary_dark"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/fragment_manufacturer_list"/>
    </LinearLayout>

</FrameLayout>