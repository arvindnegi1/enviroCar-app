<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/blue_light_cario"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/activity_car_selection_layout_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activity_car_selection_layout_carlist_entry_firstline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:gravity="center_vertical"
                android:text="Car Type"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/activity_car_selection_layout_carlist_entry_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/activity_car_selection_layout_heading"
            >
            <ImageView
                android:id="@+id/activity_car_selection_layout_carlist_entry_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:alpha="0.54"

                android:src="@drawable/ic_drive_eta_black_24dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/activity_car_selection_layout_carlist_entry_icon"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:id="@+id/activity_car_selection_layout_carlist_entry_year_layout"
                    >
                    <TextView
                        style="@style/carDetailsSubtitle"
                        android:text="Year"
                        android:textSize="11sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#A1A1A1"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/envirocar_color_divider_grey"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_marginTop="8dp"
                    android:id="@+id/activity_car_selection_layout_carlist_entry_year_data"
                    android:layout_below="@id/activity_car_selection_layout_carlist_entry_year_layout"
                    >
                    <TextView
                        android:id="@+id/activity_car_selection_layout_carlist_entry_year"
                        style="@style/carDetailsSubtitle"
                        android:text="2004"
                        android:textAlignment="center"
                        android:textSize="13sp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/envirocar_color_divider_grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/activity_car_selection_layout_carlist_entry_gasoline_layout"
                    android:layout_toRightOf="@id/activity_car_selection_layout_carlist_entry_year_layout"
                    >
                    <TextView
                        style="@style/carDetailsSubtitle"
                        android:text="Type"
                        android:textAlignment="center"
                        android:textColor="#A1A1A1"
                        android:layout_gravity="center"
                        android:textSize="11sp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/envirocar_color_divider_grey"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/activity_car_selection_layout_carlist_entry_gasoline_data"
                    android:layout_toRightOf="@id/activity_car_selection_layout_carlist_entry_year_data"
                    android:layout_below="@id/activity_car_selection_layout_carlist_entry_gasoline_layout"
                    >
                    <TextView
                        android:id="@+id/activity_car_selection_layout_carlist_entry_gasoline"
                        style="@style/carDetailsSubtitle"
                        android:text="Gasoline"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/envirocar_color_divider_grey"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/activity_car_selection_layout_carlist_entry_engine_layout"
                    android:layout_toRightOf="@id/activity_car_selection_layout_carlist_entry_gasoline_layout"
                    >
                    <TextView
                        style="@style/carDetailsSubtitle"
                        android:text="Displacement"
                        android:textAlignment="center"
                        android:textColor="#A1A1A1"
                        android:layout_gravity="center"
                        android:textSize="11sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/activity_car_selection_layout_carlist_entry_gasoline_data"
                    android:layout_below="@id/activity_car_selection_layout_carlist_entry_engine_layout">

                    <TextView
                        android:id="@+id/activity_car_selection_layout_carlist_entry_engine"
                        style="@style/carDetailsSubtitle"
                        android:text="Gasoline"
                        android:textAlignment="center"
                        android:textSize="13sp"/>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>